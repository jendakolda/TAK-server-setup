<?xml version="1.0" encoding="UTF-8"?>
<!--
  ATAK Map Source Configuration for Czech Base Map (ZMVM)

  This is a simplified base map of Czech Republic, good for general navigation.
  Uses less data than the detailed topographic map.

  To use:
  1. Replace YOUR_SERVER_IP with your actual server IP address
  2. Copy this file to your Android device
  3. In ATAK, go to Settings > Import > Import Map Source
  4. Select this XML file
-->
<customMapSource>
    <name>Czech Base Map</name>
    <provider>ČÚZK (via OpenTAK Server)</provider>
    <tileType>1</tileType>
    <!-- Base URL - Uses Nginx proxy on port 80 -->
    <url>http://YOUR_SERVER_IP/tiles/zmvm/{z}/{x}/{y}.png</url>
    <backgroundColor>#00000000</backgroundColor>
    <minZoom>6</minZoom>
    <maxZoom>18</maxZoom>
    <tileSize>256</tileSize>

    <!-- Czech Republic bounding box -->
    <north>51.06</north>
    <south>48.55</south>
    <east>18.86</east>
    <west>12.09</west>

    <!-- Coordinate system -->
    <srid>4326</srid>

    <!-- Cache settings -->
    <offlineCache>true</offlineCache>
    <cachePath>ATAK/cache/czech_basemap</cachePath>
</customMapSource>